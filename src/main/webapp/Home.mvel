<html>
<head>
<title>Mail Tester</title>
<script type="text/javascript" src="js/jquery.js"></script>
<script type="text/javascript" src="js/jquery.form.js"></script>

<script type="text/javascript">
        
$(document).ready(function() {
	$("#resulthead").hide();
	$("#submit").click(function() {
        $('#mail_form').ajaxForm({
            url: "mailservice",
            success: function(responseText, statusText, xhr, $form) {
            	console.debug(responseText);
            	$("#resulthead").show();
            	$("#result").html(responseText);
            }
            });
        });
    });

        
        </script>
<style type="text/css">
            label {
            display: block;
            }
        </style>
</head>
<body>
	<h1>Mail Tester</h1>
	<div>
		<form id="mail_form" action="" method="POST">
			<label for="address">Email Address:</label><input type="text" name="address" id="address"><br />
			<label for=subject">Subject Line:</label><input type="text" name="subject" id="subject"><br /> 
			<label for="body">Message:</label><textarea name="body" id="body"></textarea>
			<br /> <input id="submit" type="submit" value="Send">
		</form>
	</div>

	<h2 id="resulthead">Result</h2>
	<div id="result"></div>
</body>
</html>
